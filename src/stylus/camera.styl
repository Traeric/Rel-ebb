.rel-ebb-camera-box
  width 100%
  height 100%
  display flex
  flex-direction column
  justify-content space-between

  .show-photo
    width 100%
    height 90%

    video
      width 100%
      height 100%
      transform rotateY(180deg)
      background-color #000
    canvas
      width 100%
      height 100%
      display none

  .btns
    width 100%
    height 10%
    display flex
    justify-content center
    padding 5px 0
    box-sizing border-box

    .take-photo-btn
      color #fff
      outline none
      cursor pointer
      width 100%
      height 50px
      border-radius 4px
      font-size 20px
      margin 0 5px

    .open
      border 1px solid #fb7299
      background-color pink

      &:hover
        background-color #fff
        color pink

    .close
      border 1px solid #1e6eff
      background-color #1E9FFF

      &:hover
        background-color #fff
        color #1E9FFF

    .take
      border 1px solid #3bb842
      background-color #5FB878

      &:hover
        background-color #fff
        color #5FB878


