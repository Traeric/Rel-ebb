.rel-ebb-photo-cut
  width 100%
  height 100%

  .rel-ebb-bg
    display flex
    align-items center
    justify-content center
    position relative
    width 100%
    height 100%
    background-image url("../../assets/images/transparent.png")

    img
      max-width 100%
      max-height 100%

    .rel-ebb-shadow
      display flex
      justify-content center
      align-items center
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background-color rgba(0, 0, 0, .3)
      cursor crosshair
      user-select none

      .cutting-area
        width 100px
        height 100px
        position relative
        cursor move
        display flex
        justify-content center
        align-items center

        div
          position absolute

        .cutting-line-up
          top 0
          left 0
          width 100%
          height 1px
          background #fff url("../../assets/images/Jcrop.gif") top left repeat
          cursor n-resize

        .cutting-line-down
          bottom 0
          left 0
          width 100%
          height 1px
          background #fff url("../../assets/images/Jcrop.gif") top left repeat
          cursor s-resize

        .cutting-line-left
          top 0
          left 0
          width 1px
          height 100%
          background #fff url("../../assets/images/Jcrop.gif") top left repeat
          cursor e-resize

        .cutting-line-right
          top 0
          right 0
          width 1px
          height 100%
          background #fff url("../../assets/images/Jcrop.gif") top left repeat
          cursor w-resize

        .cutting-point
          width 8px
          height 8px
          background-color #000 !important

        .cutting-point-up
          top -4px
          left calc(50% - 4px)
          cursor n-resize
          z-index 10

        .cutting-point-down
          bottom -4px
          left calc(50% - 4px)
          cursor n-resize
          z-index 10

        .cutting-point-left
          left -4px
          top calc(50% - 4px)
          cursor w-resize
          z-index 10

        .cutting-point-right
          right -4px
          top calc(50% - 4px)
          cursor w-resize
          z-index 10

        .cutting-point-left-up
          left -4px
          top -4px
          cursor nw-resize
          z-index 10

        .cutting-point-left-down
          left -4px
          bottom -4px
          cursor sw-resize
          z-index 10

        .cutting-point-right-up
          right -4px
          top -4px
          cursor ne-resize

        .cutting-point-right-down
          z-index 10
          right -4px
          bottom -4px
          cursor se-resize

        .cutting-area-h
          height 33.3333%
          width 100%
          border 1px dashed #aaa

        .cutting-area-v
          width 33.333%
          height 100%
          border 1px dashed #aaa

        .img-display
          width calc(100% - 2px)
          height calc(100% - 2px)
          background-image url("https://ss0.bdstatic.com/70cFvHSh_Q1YnxGkpoWK1HF6hhy/it/u=2754950309,2133495749&fm=26&gp=0.jpg")

          

