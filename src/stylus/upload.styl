.rel-ebb-img-upload
  .upload-button
    padding 10px
    position relative

    .upload-input
      position absolute
      cursor pointer
      width 106px
      height 43px
      opacity 0

      &:hover ~ .upload
        color pink
        background-color #fff

    .upload
      background-color pink
      border 1px solid #fb7299
      color #fff
      border-radius 4px
      padding 10px 20px
      font-size 16px
      cursor pointer
      outline none


  .upload-display
    padding 10px
    display flex
    flex-wrap nowrap

    .img
      width 110px
      height 110px
      border-radius 4px
      border 1px solid #dedede
      box-shadow 1px 1px 3px #ebebeb
      margin-right 16px

      .inner
        position relative
        width 100px
        height 100px
        overflow hidden
        margin 5px

        img
          width 100%
          height 100%

        .info.success
          position absolute
          left 0
          top 0
          width 100%
          height 30px
          line-height 30px
          text-align center
          font-size 14px
          color #fff
          background-color rgba(59, 184, 66, 0.49)

