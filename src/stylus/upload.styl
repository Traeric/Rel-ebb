.rel-ebb-img-upload
  .upload-button
    padding 10px
    position relative

    .upload-input
      position absolute
      cursor pointer
      width 106px
      height 43px
      opacity 0

      &:hover ~ .upload
        color pink
        background-color #fff

    .upload
      background-color pink
      border 1px solid #fb7299
      color #fff
      border-radius 4px
      padding 10px 20px
      font-size 16px
      cursor pointer
      outline none


  .upload-display
    padding 10px

    .img
      width 110px
      height 110px
      border-radius 4px
      border 1px solid #dedede
      box-shadow 1px 1px 3px #ebebeb

      .inner
        width 100px
        height 100px
        overflow hidden
        margin 5px

        img
          width 100%
          height 100%

