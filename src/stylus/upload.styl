.rel-ebb-img-upload
  .upload-button
    padding 10px
    position relative

    .upload-input
      position absolute
      cursor pointer
      width 106px
      height 43px
      opacity 0

      &:hover ~ .upload
        color pink
        background-color #fff

      &:hover ~ .file-button
        color #337ab7

    .upload
      background-color pink
      border 1px solid #fb7299
      color #fff
      border-radius 4px
      padding 10px 20px
      font-size 16px
      cursor pointer
      outline none

    .file-button
      background-color #337ab7
      border 1px solid #2e6da4

    .start-upload
      border-radius 4px
      padding 10px 20px
      font-size 16px
      cursor pointer
      outline none
      color #333
      background-color #fff
      border 1px solid #ccc

      &:hover
        background-color #e6e6e6
        border-color #adadad



    .drag-area
      background-color #fb7299
      width 300px
      height 120px
      display flex
      flex-wrap wrap
      justify-content space-around
      .icon
        width 100%
        height 90px
      .text
        width 100%
        color #ccc
        font-size 14px
        text-align center

  .upload-display
    padding 10px
    display flex
    flex-wrap nowrap

    .img
      width 110px
      height 110px
      border-radius 4px
      border 1px solid #dedede
      box-shadow 1px 1px 3px #ebebeb
      margin-right 16px

      .inner
        position relative
        width 100px
        height 100px
        overflow hidden
        margin 5px

        img
          width 100%
          height 100%

        .info
          position absolute
          left 0
          top 0
          width 100%
          height 30px
          line-height 30px
          text-align center
          font-size 14px
          color #fff

        .info.success
          background-color #3bb842

        .info.error
          background-color #f00

        .cover.success
          position absolute
          top 0
          left 0
          height 100px
          width 100px
          background-size 100px 100px
          background-image url("../../assets/images/upload-success.png")

        .cover.error
          position absolute
          top 0
          left 0
          height 100px
          width 100px
          background-size 100px 100px
          background-image url("../../assets/images/upload-error.png")

  .file-upload-display
    padding 0 10px

    .progress-bar
      width 100%
      height 25px
      border-radius 6px
      overflow hidden

      .color
        height 100%
        width 0
        background-color #337ab7
        background-image linear-gradient(45deg,
        rgba(255, 255, 255, .15) 10%, transparent 10%, transparent 20%,
        rgba(255, 255, 255, .15) 20%, rgba(255, 255, 255, .15) 30%,
        transparent 30%, transparent 40%,
        rgba(255, 255, 255, .15) 40%, rgba(255, 255, 255, .15) 50%,
        transparent 50%, transparent 60%,
        rgba(255, 255, 255, .15) 60%, rgba(255, 255, 255, .15) 70%,
        transparent 70%, transparent 80%,
        rgba(255, 255, 255, .15) 80%, rgba(255, 255, 255, .15) 90%,
        transparent 90%, transparent)


    .file-name
      display flex
      justify-content start
      align-items center
      white-space nowrap
      font-size 16px
      height 30px
      line-height 30px

      .status-item-success
        color #3bb842
        margin 0 10px

      .status-item-error
        color #f00
        margin 0 10px

      .icon
        height 20px
        width 20px
        background-size 20px 20px

      .success
        background-image url("../../assets/images/file-upload-success.png")

      .error
        background-image url("../../assets/images/file-upload-error.png")

